{
  "name": "Merge sfx",
  "description": "Plays the sound that should be played when merging branches to master.",
  "version": "0.9",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at":"document_start"
  }],
  "permissions": [
    "activeTab",
    "webNavigation",
    "https://github.com/*"
  ],
  "browser_action": {
      "default_title": "Merge sfx",
      "default_icon": "key.png",
      "default_popup": "popup.html" 
  },
  "icons": {
    "16": "key.png"
  },
  "manifest_version": 2
}
